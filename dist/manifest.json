{
  "manifest_version": 3,
  "name": "iSnippets",
  "version": "2.0.2",
  "description": "记下你真正想记住的内容",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel",
    "alarms",
    "identity"
  ],
  "oauth2": {
    "client_id": "30003599100-7v7t6tkd26lsq1i3f9jo1977dt2hectt.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_title": "iSnippets"
  },
  "commands": {
    "capture-snippet": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "保存选中的片段"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "打开侧边栏"
    }
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": [
        "library.html",
        "library.js",
        "library.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}